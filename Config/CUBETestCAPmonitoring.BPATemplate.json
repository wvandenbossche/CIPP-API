{
  "name": "CUBE - Test CAP monitoring",
  "style": "Table",
  "Fields": [
    {
      "name": "cubeCAPexist",
      "UseExistingInfo": false,
      "FrontendFields": [
        {
          "name": "Cube CAP rules exist",
          "value": "cubeCAPexist",
          "formatter": "bool"
        }
      ],
      "where": "$_.displayName -ne $null",
      "StoreAs": "bool",
      "API": "Graph",
      "ExtractFields": [
        "displayName"
      ],
      "URL": "https://graph.microsoft.com/v1.0/policies/conditionalAccessPolicies?$filter=displayName eq 'All apps: Require MFA outside the office'"
    },
    {
      "name": "cubeMFAenabled",
      "UseExistingInfo": false,
      "FrontendFields": [
        {
          "name": "Cube CAP MFA enabled",
          "value": "cubeMFAenabled",
          "formatter": "bool"
        }
      ],
      "where": "$_.state -eq 'enabled'",
      "StoreAs": "bool",
      "API": "Graph",
      "ExtractFields": [
        "state"
      ],
      "URL": "https://graph.microsoft.com/v1.0/policies/conditionalAccessPolicies?$filter=displayName eq 'All apps: Require MFA outside the office'"
    },
    {
      "name": "cubeConditionalAccess",
      "UseExistingInfo": false,
      "FrontendFields": [
        {
          "name": "Conditional Access Policy",
          "value": "displayName",
          "formatter": "table"
        },
        {
          "name": "Conditional Access State",
          "value": "state",
          "formatter": "table"
        }
      ],
      "where": "",
      "StoreAs": "JSON",
      "API": "Graph",
      "ExtractFields": [
        "displayName",
        "state"
      ],
      "URL": "https://graph.microsoft.com/v1.0/policies/conditionalAccessPolicies"
    }
  ]
}
